<!DOCTYPE html>
<html lang="en">
  <head>
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-127319015-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
    
      gtag('config', 'UA-127319015-1');
    </script>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <% if(css_js == 'home'){ %>
    <meta name="google-site-verification" content="esK-yO9PtyihVN485WamU2LFAcwcn6q8wzcm_jknU5g" />
    <% } %>
    <%if(['about','artist','faq','gallery','home','register'].includes(css_js)){ %>
    <meta property="og:title" content="<%=title%> | Splatr."/>
    <meta property="og:type" content="website"/>
    <meta property="og:url" content="<%=url%>"/>  
    <meta property="og:image" content="<%=image%>"/>
    <meta property="og:description" content="<%=description%>"/>
    <meta property="og:site_name" content="Splatr."/>
    <meta name="twitter:card" content="summary_large_image"/>
    <meta name="twitter:site" content="Splatr."/>
    <% } %>
    <title><%=title%> | Splatr.</title>
    <link rel="icon" href="https://ayizan.blob.core.windows.net/site-images/Splatr Icon.png" type="image/png">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="/now/sass/now-ui-kit.css" type="text/css">
    <link rel="stylesheet" href="/css/main.css" type="text/css">
    <% if(['payment','deposit'].includes(css_js)) { %>
    <link rel="stylesheet" href="/css/transaction.css" type="text/css">
    <% } else { %>
    <link rel="stylesheet" href="/css/<%=css_js%>.css" type="text/css">
    <% } %>
    <% if(currentUser && currentUser.preferences.night == true){ %>
    <link rel="stylesheet" href="/css/main-dark.css" type="text/css">
    <% } %>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:700,300|Roboto" rel="stylesheet" type="text/css">
    <script src='/js/all.min.js' type="text/javascript"></script>
  </head>
  <body>
    <%if(['payment','deposit'].includes(css_js) && currentUser.preferences.night == true){ %>
    <input type="hidden" id="night">
    <% } %>
    <% include feedback %>
    <nav id="nav">
      <a href="/">
        <img id="home-link" src="https://ayizan.blob.core.windows.net/ayizanlogos/Logos/Splatr Purple.svg" alt="Splatr Purple Splat Logo">
      </a>
      <button type="button" id="mobile-menu-button"><i class="far fa-bars fa-lg"></i></button>
      <div id="full-menu">
        <a href="/search" class="nav-link">
          Search
        </a>
        <a href="/faq" class="nav-link">
          FAQs
        </a>
        <a href="/about" class="nav-link">
          About Us
        </a>
        <% if(!currentUser){ %>
          <a href="/login" class="nav-link">
            Login
          </a>
          <a href="/register" class="nav-link sign-up">
            Sign Up
          </a>
        <% } else { %>
        <a href="/dash" class="nav-link">
          Your Dash
        </a>
        <a href="/logout" class="nav-link">
          Logout
        </a>
        <% if(currentUser.username){ %>
        <a href="/<%=currentUser.username%>" class="nav-link">
          <% if(!currentUser.profile.url){ %>
            <i class="fas fa-user fa-lg mr-3"></i>
            <%=currentUser.username%>
            <% } else { %>
            <div class="rounded-circle profile-img ml-auto text-right" style="background-image:url('<%=currentUser.profile.url%>')"></div>
            <%=currentUser.username%>
            <% } %>
          <% } %>
        </a>
        <% } %>
      </div>
    </nav>
    <div class="closed" id="mobile-menu">
      <ul>
        <li>
          <a href="/search" class="nav-link mobile">
            Search
          </a>
        </li>
        <li>
          <a href="/faq" class="nav-link mobile">
            FAQs
          </a>
        </li>
        <li>
          <a href="/about" class="nav-link mobile">
            About Us
          </a>
        </li>
        <% if(!currentUser){ %>
        <li>
          <a href="/login" class="nav-link mobile">
            Login
          </a>
        </li>
        <li>
          <a href="/register" class="nav-link mobile sign-up">
            Sign Up
          </a>
        </li>
        <% } else { %>
        <li>
          <a href="/dash" class="nav-link mobile">
            Your Dash
          </a>
        </li>
        <li>
          <a href="/logout" class="nav-link mobile">
            Logout
          </a>
        </li>
        <li>
          <a href="/<%=currentUser.username%>" class="nav-link mobile">
            <% if(!currentUser.profile.url){ %>
              <i class="fas fa-user text-white fa-lg mr-3"></i>
              <%=currentUser.username%>
            <% } else { %>
              <div class="rounded-circle profile-img ml-auto text-right" style="background-image:url('<%=currentUser.profile.url%>')"></div>
              <%=currentUser.username%>
            <% } %>
          </a>
        </li>
        <% } %>
      </ul>
    </div>