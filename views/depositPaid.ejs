<% include partials/header %>
<div class="row my-5 justify-content-center">
  <div class="col-10 col-md-4">
    <div class="card">
      <div class="card-body">
        <div class="row justify-content-center text-center">
          <div class="col-12">
            <div class="row">
              <div class="col-12 p-3 bg-primary mb-3">
                <h2 class="text-white mb-0">Receipt</h2>
              </div>
              <div class="col-12">
                <p class="text-muted"><small>Completed On: <%=Date(trans.date).toString()%></small></p>
              </div>
              <div class="col-12">
                <hr>
              </div>
              <div class="col-12 col-md-6">
                <p>Deposit on <%=comm%></p>
                <p>$<%=(trans.amount/100).toFixed(2)%></p>
              </div>
              <div class="col-12 col-md-6">
                <p>Payment Method</p>
                <p><i class="fab fa-cc-<%=trans.card.brand%> fa-lg mr-3" id="card-icon"></i>****<%=trans.card.last4%></p>
              </div>
            </div>
            <p><small class="text-muted">Transaction ID: <%=trans.id.slice(3)%></small></p>
            <a href="/transaction/<%=id%>" class="btn btn-primary btn-block btn-lg">
              Go Back to Transaction
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% include partials/footer %>